{
  "manifest_version": 3,
  "name": "ErgonomicGPT",
  "version": "1.0.0",
  "description": "Reverses AI chat interfaces to prevent neck strain - puts chat input at top and newest messages at the top",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://perplexity.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content-scripts/chatgpt.js"],
      "css": ["styles/chatgpt.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": ["content-scripts/claude.js"],
      "css": ["styles/claude.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": ["content-scripts/gemini.js"],
      "css": ["styles/gemini.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://perplexity.ai/*"
      ],
      "js": ["content-scripts/perplexity.js"],
      "css": ["styles/perplexity.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
