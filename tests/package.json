{
  "name": "ergonomic-gpt-tests",
  "version": "1.0.0",
  "description": "Automated tests for ErgonomicGPT Chrome extension",
  "private": true,
  "scripts": {
    "postinstall": "node -e \"console.log('Installing Puppeteer Chromium...')\" && npx puppeteer browsers install chrome",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:visual": "jest visual",
    "test:functional": "jest functional",
    "test:interactive": "jest interactive",
    "test:cross-browser": "jest cross-browser",
    "test:coverage": "jest --coverage",
    "docker:build": "docker-compose build",
    "docker:test": "docker-compose run --rm test-runner",
    "docker:shell": "docker-compose run --rm test-shell",
    "baseline:create": "node scripts/create-baseline.js",
    "baseline:update": "node scripts/update-baseline.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "jest": "^29.7.0",
    "jest-image-snapshot": "^6.4.0",
    "playwright": "^1.40.1",
    "puppeteer": "^21.7.0",
    "puppeteer-core": "^21.7.0",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  }
}
